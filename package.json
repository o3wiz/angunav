{
  "name": "angunav",
  "displayName": "angunav",
  "description": "Navigate between Angular component files (TS, HTML, CSS) with simple keyboard shortcuts.",
  "version": "0.0.2",
  "engines": {
    "vscode": "^1.100.0"
  },
  "author": {
    "name": "Daniel Aviv"
  },
  "repository": "https://github.com/o3wiz/angunav",
  "categories": [
    "Keymaps",
    "Other"
  ],
  "activationEvents": [
    "workspaceContains:angular.json",
    "onLanguage:typescript",
    "onLanguage:html",
    "onLanguage:css",
    "onLanguage:scss",
    "onLanguage:less"
  ],
  "main": "./out/extension.js",
  "contributes": {
    "configuration": {
      "title": "Angunav Configuration",
      "properties": {
        "angunav.templateSuffix": {
          "type": "string",
          "default": "component.html",
          "description": "Suffix for template files"
        },
        "angunav.styleSuffix": {
          "type": "string",
          "default": "component.css",
          "description": "Suffix for style files"
        },
        "angunav.componentSuffix": {
          "type": "string",
          "default": "component.ts",
          "description": "Suffix for component files"
        }
      }
    },
    "commands": [
      {
        "command": "angunav.navigateToComponent",
        "title": "Navigate to Component"
      },
      {
        "command": "angunav.navigateToTemplate",
        "title": "Navigate to Template"
      },
      {
        "command": "angunav.navigateToStyle",
        "title": "Navigate to Style"
      }
    ],
    "keybindings":[
      {
        "command": "angunav.navigateToComponent",
        "key": "alt+c",
        "when": "editorTextFocus"
      },
      {
        "command": "angunav.navigateToTemplate",
        "key": "alt+t",
        "when": "editorTextFocus"
      },
      {
        "command": "angunav.navigateToStyle",
        "key": "alt+s",
        "when": "editorTextFocus"
      }
    ]
  },
  "scripts": {
    "vscode:prepublish": "npm run compile",
    "compile": "tsc -p ./",
    "watch": "tsc -watch -p ./",
    "pretest": "npm run compile && npm run lint",
    "lint": "eslint src",
    "test": "vscode-test"
  },
  "devDependencies": {
    "@types/vscode": "^1.100.0",
    "@types/mocha": "^10.0.10",
    "@types/node": "20.x",
    "@typescript-eslint/eslint-plugin": "^8.31.1",
    "@typescript-eslint/parser": "^8.31.1",
    "eslint": "^9.25.1",
    "typescript": "^5.8.3",
    "@vscode/test-cli": "^0.0.10",
    "@vscode/test-electron": "^2.5.2"
  }
}
